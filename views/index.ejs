<%- include('./partials/head')   %>  <!-- Incluindo Head-->
 
<body>

  <%- include('./partials/navbar')  %> 
  <div class="container">

    <% avisos.forEach(aviso => { %>
        
        <div class="card shadow mt-4">
            <div class="card-header bg-azulclaro pl-5 p-4 flex align-items-center justify-content-between">
            <h2> <span class="material-icons">notifications</span> <%= aviso.titulo %> </h2>
                <h3 class="lead"> <%= moment(aviso.data).format("DD/MM/YYYY") %></h3> </div> 
            <div class="card-body p-5">
    
                <div class="d-flex align-items-center">
                    <img src="img/user.png" class="img-thumbnail rounded-circle" width="75">
                    <div class="ml-2">
                        <div class="font-weight-bold"> Usuário </div>
                        <div class="text-secondary"> Terça-feira, 8 de dezembro de 2020 </div>
                    </div>
                </div>
    
                <div class="mt-4">
                    <%= aviso.mensagem %> 
                </div>
    
                
        
                </div> <!--card body-->
            </div> <!--card-->
    <% }) %>

    </div> <!--container -->
    
    

<%- include('./partials/scripts_import') %> <!-- Incluindo Bootstrap -->
  </body>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</html>
