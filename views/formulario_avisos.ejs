<br>
<% if (typeof msg !== 'undefined') { %>
  
  <% if (msg.tipo === "sucesso") { %>
    <div class="alert alert-success" role="alert">
      <%= msg.corpo %> 
    </div>
  <% } %> <!-- fim sucesso -->

  <% if (msg.tipo === "erro") { %>
    <div class="alert alert-danger" role="alert">
      <%= msg.corpo %> 
    </div>
  <% } %> <!-- fim erro -->

<% } %>

   <form action="/avisos/novo" method="POST">
    <div class="form-group row">
      <label for="titulo" class="col-4 col-form-label">Titulo</label> 
      <div class="col-8">
        <input id="titulo" name="titulo" type="text" class="form-control">
      </div>
    </div>
    <div class="form-group row">
      <label for="data" class="col-4 col-form-label">Data</label> 
      <div class="col-8">
        <input id="data" name="data" type="text" class="form-control">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-4 col-form-label" for="mensagem">Mensagem</label> 
      <div class="col-8">
        <input id="mensagem" name="mensagem" type="text" class="form-control">
      </div>
    </div> 
    <div class="form-group row">
      <div class="offset-4 col-8">
        <button name="submit" type="submit" class="btn btn-primary">Salvar</button>
      </div>
    </div>
  </form>
</div>
